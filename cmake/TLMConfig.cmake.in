# - Config file for the TLM package
# It defines the following variables
#  TLM_DEFINITIONS  - required preprocessor definitions to use TLM
#  TLM_INCLUDE_DIRS - include directories for TLM
#  TLM_LIBRARIES    - libraries to link against

# Load the SystemC configuration from the same directory as this file.
get_filename_component (TLM_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
find_package (SystemC PATHS ${TLM_CMAKE_DIR} NO_DEFAULT_PATH)

# TLM is currently header-only and depends only on SystemC.
set (TLM_DEFINITIONS ${SystemC_DEFINITIONS})
set (TLM_INCLUDE_DIRS ${SystemC_INCLUDE_DIRS})
set (TLM_LIBRARIES ${SystemC_LIBRARIES})

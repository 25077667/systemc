## Generic example setup
## (should be kept in sync among all test.am files)

check_PROGRAMS += %D%/test

%C%_test_CPPFLAGS = \
	-I$(srcdir)/%D%/include \
	$(CPPFLAGS_TLMTESTS)

%C%_test_SOURCES = \
	$(%C%_H_FILES) \
	$(%C%_CXX_FILES)

examples_BUILD += \
	$(%C%_BUILD)

examples_CLEAN += \
	%D%/run.log \
	%D%/expexted_trimmed.log \
	%D%/run_trimmed.log \
	%D%/diff.log

examples_FILES += \
	$(%C%_H_FILES) \
	$(%C%_CXX_FILES) \
	$(%C%_BUILD) \
	$(%C%_EXTRA)


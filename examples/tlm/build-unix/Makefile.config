# Should be set in the environment:
TARGET_ARCH     = macosx
SYSTEMC_HOME	= /eda/osci/systemc/2.2-gcc4.0
TLM_HOME	= /eslx/Project/tlm_2-svn/svn

SYSTEMC_INC_DIR  = $(SYSTEMC_HOME)/include
SYSTEMC_LIB_DIR  = $(SYSTEMC_HOME)/lib-$(TARGET_ARCH)
TLM_INC_DIR      = $(TLM_HOME)/include

GXX = g++
GCC = gcc
LD  = g++
FLAGS = -g -Wall -Werror -pedantic -Wno-long-long -DSC_INCLUDE_DYNAMIC_PROCESSES -I$(SYSTEMC_INC_DIR) -I$(TLM_INC_DIR)
LDFLAGS = -L$(SYSTEMC_LIB_DIR) -lsystemc
